<%= stylesheet_link_tag "userindex" %>

<ul class='cardlist'>
  <% @users.each do |user| %>
    <li class='card'>
      <div class='photo'>
        <% if user.photo.present? %>
          <%= image_tag(user.photo, alt: user.name, class: "user-photo") %>
        <% else %>
          <%= image_tag "user.jpeg", height: 200 %>
        <% end %>
      </div>
      <div class='userinfo'>
        <%= link_to user_path(user) do %>
          <h2 class='username'><%= user.name %></h2>
        <% end %>
        <h3 class='postnumber'>Number of posts: <%= user.posts.count %></h3>
      </div>
    </li>
  <% end %>
</ul>
